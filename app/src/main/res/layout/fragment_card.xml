<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="10"
        app:max_visible="3"
        app:min_adapter_stack="10"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_margin"
        >
        <include layout="@layout/card_actions" />
    </FrameLayout>

    <tr.xip.errorview.ErrorView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/error_view"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_rounded_transparent_black"
        android:padding="@dimen/activity_margin"

        app:ev_titleColor="@color/text_gray"
        app:ev_title="网络不稳定"
        app:ev_subtitle="请检查网络信号后轻击重试按钮"
        app:ev_retryButtonText="重试"
        app:ev_retryButtonTextColor="@color/text_gray_light"
        />

</RelativeLayout>

